{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les citations</h1>
    <p>
        <a href="{{ path('app_citation_new') }}">Ajouter une citation</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for citation in citations %}
            <tr>
                <td><a href="{{ path('app_citation_show', { 'id': citation.id }) }}">{{ citation.id }}</a></td>
                <td>{{ citation.text }}</td>
                <td>{{ citation.author }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('app_citation_show', { 'id': citation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('app_citation_edit', { 'id': citation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('app_citation_new') }}">Create a new citation</a>
        </li>
    </ul>
{% endblock %}
